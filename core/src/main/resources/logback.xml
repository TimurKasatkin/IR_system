<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %date %-5level [%logger{128}]: %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="ru.innopolis.ir.project.core.rest" level="info" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>